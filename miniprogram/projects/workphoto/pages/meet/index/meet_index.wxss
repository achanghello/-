@import "../../../../../style/public/comm_box_list.wxss";
@import "../../../style/skin.wxss"; 


.main {
	padding: 0rpx;
} 

.comm-list-box {
  margin: 0rpx;
  padding: 0rpx;
  border-radius: 5px;
  background-color: #fff;
}
.comm-list-box .item .left {
  width: 80rpx;
	height: 80rpx;
  border-radius: 40rpx;
  margin: 20rpx;
}
.comm-list-box .item {
  width: 100%;
  height: 130rpx;
  display: flex;
  align-items: center;
  flex-direction: row;
  margin: 0;
  border-radius: 0;
}
.comm-list-box .item .center {
  flex: 1;
}
.comm-list-box .item .right-collection {
  width: 80rpx;
	height: 80rpx;
  margin: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.comm-list-box .line {
  width: 90%;
  border-bottom: 2rpx solid rgba(235, 237, 242, 1);
  margin: 0 auto;
}