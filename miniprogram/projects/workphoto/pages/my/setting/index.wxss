/* projects/workphoto/pages/my/setting/index.wxss */
page {
  width: 100%;
  height: 100%;
}

.list-menu {
	width: 100%;
  padding: 0 25rpx;
  margin-top: 25rpx;
  display: flex;
  border-radius: 15rpx;
	flex-direction: column;
	background-color: #fff;
}

.list-menu .item {
	width: 100%;
	display: flex;
	font-size: 30rpx;
	align-items: center;
	justify-content: flex-start;
	padding: 35rpx 10rpx;
	border-bottom: 1rpx solid #ddd;
}

.list-menu .item:last-child {
	border-bottom: 0rpx;
} 

.list-menu .item .title {
	flex: 1;
	display: flex;
	align-items: center;
	color: #000;
}

.direction-right {
  color: rgba(150, 151, 153, 1);
} 