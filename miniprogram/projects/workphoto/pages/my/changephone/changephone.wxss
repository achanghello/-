.form-item {
  display: flex;
  width: 750rpx;
  height: 100rpx;
  background-color: #fff;
  margin-top: 20rpx;
}
.form-item .title {
  width: 130rpx;
  line-height: 100rpx;
  text-align: center;
  color: black;
}
.form-item .phone {
  flex: 1;
}
.form-item .phone input {
  width: 100%;
  height: 100%;
  line-height: 100rpx;
}

.form-item .code {
  flex: 1;
}
.form-item .code input {
  width: 100%;
  height: 100%;
  line-height: 100rpx;
}

.form-item .getcode {
  width: 200rpx;
  color: rgba(0, 81, 255, 1);
  line-height: 100rpx;
  text-align: center;
}


.foot button {
  width: 640rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 100rpx;
  font-weight: 500;
  color: #f2f4f9;
  background-color: #585CE5;
  box-shadow: 0px 14rpx 80rpx  rgba(0, 29, 176, 0.3);
  margin-top: 250rpx;
}

.foot button:active {
  background-color: rgba(0, 29, 176, 0.3);
}
.foot button[disabled] {
  color: #fff;
  background: rgba(88, 92, 229, 0.6);
}

