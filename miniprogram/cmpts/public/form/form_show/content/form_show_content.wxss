page {
  width: 100%;
  height: 100%;
}

.foot button {
  width: 640rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-radius: 100rpx;
  font-weight: 500;
  background-color: #585CE5;
  box-shadow: 0px 14rpx 80rpx  rgba(0, 29, 176, 0.3);
  margin: 100rpx auto;
  color: #fff;
}
